<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/audioContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="@dimen/zero_dp">
    <ImageView
        android:id="@+id/iconAudio"
        android:layout_width="@dimen/fifth_dp"
        android:layout_height="@dimen/fifth_dp"
        android:src="@drawable/outline_audio_file_24"
        app:tint = "@color/gray"
        android:layout_marginStart="@dimen/second_dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/audio_file"/>

    <TextView
        android:id="@+id/nameAudio"
        android:layout_width="@dimen/twenty_sixth_dp"
        android:layout_height="wrap_content"
        tools:text = "Maxim"
        android:layout_marginStart="@dimen/second_dp"
        app:layout_constraintStart_toEndOf="@id/iconAudio"
        android:layout_marginEnd="@dimen/first_dp"
        app:layout_constraintTop_toTopOf="@id/iconAudio"
        app:layout_constraintBottom_toBottomOf="@id/iconAudio"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="@dimen/sixteen_sp"/>

    <TextView
        android:id="@+id/durationAudio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text = "02:30"
        android:textColor="@color/gray"
        android:layout_marginEnd="@dimen/second_dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/nameAudio"
        app:layout_constraintBottom_toBottomOf="@id/nameAudio"/>


</androidx.constraintlayout.widget.ConstraintLayout>